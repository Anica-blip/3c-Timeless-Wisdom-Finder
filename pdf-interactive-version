    <script>
        const pdfWisdomDatabase = [
            {
                keywords: ['anger', 'mad', 'frustrated', 'annoyed', 'irritated', 'furious'],
                quote: "You have power over your mind - not outside events. Realize this, and you will find strength.",
                author: "Marcus Aurelius",
                reflection: "Anger feels like fire consuming us, but wisdom reminds us that our reactions are the one thing we truly control.",
                prompt: "Write about what aspects of your anger were within your control vs. outside circumstances."
            },
            {
                keywords: ['anxious', 'anxiety', 'worry', 'worried', 'nervous', 'stressed', 'stress'],
                quote: "If you are facing in the right direction, all you need to do is keep on walking.",
                author: "Buddhist Proverb",
                reflection: "Anxiety whispers we need to solve everything at once, but wisdom teaches progress comes one step at a time.",
                prompt: "Identify one small, concrete action you can take today toward what you're worried about."
            },
            {
                keywords: ['sad', 'sadness', 'depressed', 'down', 'blue', 'melancholy', 'grief'],
                quote: "The wound is the place where the Light enters you.",
                author: "Rumi",
                reflection: "Sadness isn't a flaw to fix but a doorway to deeper understanding and compassion.",
                prompt: "What has this period of sadness taught you that you might not have learned otherwise?"
            },
            {
                keywords: ['lost', 'confused', 'direction', 'purpose', 'meaning', 'path', 'unclear'],
                quote: "The journey of a thousand miles begins with one step.",
                author: "Lao Tzu",
                reflection: "Feeling lost isn't about lacking destination—it's expecting to see the entire journey from where you stand.",
                prompt: "What values feel most true to you right now? What one small step aligns with those values?"
            },
            {
                keywords: ['overwhelmed', 'too much', 'busy', 'chaos', 'scattered', 'burden'],
                quote: "You are not required to finish the work, but neither are you free to abandon it.",
                author: "Rabbi Tarfon",
                reflection: "Overwhelm comes from believing we must complete everything perfectly. Focus on your part, release the rest.",
                prompt: "List what's overwhelming you. Circle only what's truly yours to handle today."
            },
            {
                keywords: ['lonely', 'alone', 'isolated', 'disconnected', 'solitude'],
                quote: "All cruelty springs from weakness.",
                author: "Seneca",
                reflection: "When disconnected from others, we're usually first disconnected from ourselves. Solitude can become sacred space.",
                prompt: "When alone with yourself, what thoughts arise that you might be avoiding?"
            },
            {
                keywords: ['failure', 'failed', 'mistake', 'wrong', 'embarrassed', 'shame'],
                quote: "Our greatest glory is not in never falling, but in rising every time we fall.",
                author: "Confucius",
                reflection: "'Failure' is often just information about what doesn't work, bringing you closer to what does.",
                prompt: "How might you reframe your recent 'failure' as tuition paid toward mastery?"
            },
            {
                keywords: ['change', 'transition', 'uncertainty', 'unknown', 'different', 'transformation'],
                quote: "The only way to make sense out of change is to plunge into it, move with it, and join the dance.",
                author: "Alan Watts",
                reflection: "We resist change by mistaking our current identity for our true self. We're like rivers—always flowing, always becoming.",
                prompt: "What aspects of your old self are you grieving? What new qualities are trying to emerge?"
            }
        ];

        function togglePDFWisdom() {
            const content = document.getElementById('pdfWisdomContent');
            const arrow = document.querySelector('.pdf-expand-arrow');
            
            if (content.classList.contains('expanded')) {
                content.classList.remove('expanded');
                arrow.style.transform = 'translateY(-50%) rotate(0deg)';
            } else {
                content.classList.add('expanded');
                arrow.style.transform = 'translateY(-50%) rotate(180deg)';
                setTimeout(() => {
                    document.getElementById('pdfChallenge').focus();
                }, 400);
            }
        }

        function revealPDFWisdom() {
            const challenge = document.getElementById('pdfChallenge').value.toLowerCase().trim();
            
            if (!challenge) {
                alert('Please share what\'s on your mind first.');
                return;
            }

            let selectedWisdom = null;
            for (let wisdom of pdfWisdomDatabase) {
                if (wisdom.keywords.some(keyword => challenge.includes(keyword))) {
                    selectedWisdom = wisdom;
                    break;
                }
            }

            if (!selectedWisdom) {
                selectedWisdom = {
                    quote: "Be yourself; everyone else is already taken.",
                    author: "Oscar Wilde",
                    reflection: "Life's challenges often come from trying to meet expectations that aren't truly ours.",
                    prompt: "Where might you be betraying your authentic self to meet external expectations?"
                };
            }

            document.getElementById('pdfWisdomQuote').textContent = `"${selectedWisdom.quote}"`;
            document.getElementById('pdfWisdomAuthor').textContent = `— ${selectedWisdom.author}`;
            document.getElementById('pdfWisdomReflection').textContent = selectedWisdom.reflection;
            document.getElementById('pdfJournalPrompt').textContent = selectedWisdom.prompt;
            
            document.getElementById('pdfWisdomResult').style.display = 'block';
        }

        function subscribePDFWisdom() {
            const email = document.getElementById('pdfEmailInput').value.trim();
            
            if (!email || !email.includes('@')) {
                alert('Please enter a valid email address.');
                return;
            }

            const subject = encodeURIComponent('Inner Growth Letters - PDF Subscription');
            const body = encodeURIComponent(`Hello!

I found your Timeless Wisdom tool in your monthly PDF and would love to receive weekly wisdom from 3C Thread To Success.

Email: ${email}

Thank you!`);
            
            window.location.href = `mailto:3c.innertherapy@gmail.com?subject=${subject}&body=${body}`;
            
            document.getElementById('pdfEmailInput').value = '';
            alert('Thank you! Your email will open shortly.');
        }

        // Auto-expand functionality
        document.getElementById('pdfChallenge').addEventListener('focus', function() {
            this.style.height = '70px';
        });

        // PDF-specific detection
        if (window.location.protocol === 'file:' || navigator.pdfViewerEnabled) {
            console.log('PDF environment detected - optimizations applied');
        }
    </script>
</body>
