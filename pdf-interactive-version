        function togglePDFWisdom() {
            const content = document.getElementById('pdfWisdomContent');
            const arrow = document.querySelector('.pdf-expand-arrow');
            
            if (content.classList.contains('expanded')) {
                content.classList.remove('expanded');
                arrow.style.transform = 'translateY(-50%) rotate(0deg)';
            } else {
                content.classList.add('expanded');
                arrow.style.transform = 'translateY(-50%) rotate(180deg)';
                setTimeout(() => {
                    document.getElementById('pdfChallenge').focus();
                }, 400);
            }
        }

        function revealPDFWisdom() {
            const challenge = document.getElementById('pdfChallenge').value.trim();
            
            if (!challenge) {
                alert('Please share what\'s on your mind first.');
                return;
            }

            const selectedWisdom = analyzePDFWisdom(challenge);

            document.getElementById('pdfWisdomQuote').textContent = `"${selectedWisdom.quote}"`;
            document.getElementById('pdfWisdomAuthor').textContent = `— ${selectedWisdom.author}`;
            document.getElementById('pdfWisdomReflection').textContent = selectedWisdom.reflection;
            document.getElementById('pdfJournalPrompt').textContent = selectedWisdom.prompt;
            
            document.getElementById('pdfWisdomResult').style.display = 'block';
        }

        function analyzePDFWisdom(message) {
            const lowercaseMessage = message.toLowerCase();
            const words = lowercaseMessage.split(/\s+/);
            
            // Enhanced sentiment and context analysis for PDF
            const emotionalContext = analyzePDFEmotionalContext(lowercaseMessage, words);
            const category = determinePDFWisdomCategory(emotionalContext, lowercaseMessage);
            const wisdomOptions = pdfWisdomDatabase[category] || pdfWisdomDatabase.general;
            
            // Select wisdom with variety tracking
            return selectPDFContextualWisdom(wisdomOptions, emotionalContext);
        }

        function analyzePDFEmotionalContext(message, words) {
            const context = {
                emotions: [],
                intensity: 'medium',
                tone: 'neutral',
                personalPronoun: false,
                questionType: null
            };

            // Detect personal pronouns
            context.personalPronoun = /\b(i|me|my|mine|myself)\b/i.test(message);

            // Analyze emotional indicators
            const strongNegative = /\b(hate|terrible|awful|horrible|devastating|furious|enraged|disgusted|hopeless|worthless)\b/i;
            const moderateNegative = /\b(sad|angry|frustrated|worried|anxious|upset|disappointed|confused|lost|tired|stressed)\b/i;
            
            const strongPositive = /\b(amazing|wonderful|fantastic|thrilled|ecstatic|grateful|blessed|joyful|excited)\b/i;
            const moderatePositive = /\b(happy|good|glad|pleased|content|satisfied|hopeful|optimistic)\b/i;

            if (strongNegative.test(message)) {
                context.intensity = 'high';
                context.tone = 'negative';
            } else if (moderateNegative.test(message)) {
                context.intensity = 'medium';
                context.tone = 'negative';
            } else if (strongPositive.test(message)) {
                context.intensity = 'high';
                context.tone = 'positive';
            } else if (moderatePositive.test(message)) {
                context.intensity = 'medium';
                context.tone = 'positive';
            }

            // Detect question types
            if (/\bwhat.*(meaning|purpose|point)\b/i.test(message)) {
                context.questionType = 'existential';
            } else if (/\bhow.*(get|find|do|change)\b/i.test(message)) {
                context.questionType = 'practical';
            }

            return context;
        }

        function determinePDFWisdomCategory(context, message) {
            // Handle positive states
            if (context.tone === 'positive' && context.intensity === 'high') {
                return 'joy';
            }

            // Existential questions
            if (context.questionType === 'existential') {
                return 'lost';
            }

            // Emotional keyword analysis
            const emotionalSignals = {
                anger: /\b(angry|mad|furious|rage|irritated|annoyed|pissed|hate|infuriating)\b/i,
                anxiety: /\b(anxious|anxiety|worried|worry|nervous|stressed|stress|panic|overwhelmed|scared|fear)\b/i,
                sadness: /\b(sad|depressed|depression|down|blue|crying|tears|grief|heartbroken|miserable)\b/i,
                lost: /\b(lost|confused|direction|purpose|meaning|path|unclear|stuck|don't know)\b/i,
                overwhelm: /\b(overwhelmed|too much|busy|chaos|scattered|burden|can't handle|exhausted)\b/i,
                loneliness: /\b(lonely|alone|isolated|disconnected|nobody|solitude|abandoned)\b/i,
                failure: /\b(failed|failure|mistake|wrong|embarrassed|shame|messed up|screwed up)\b/i,
                change: /\b(change|changing|transition|different|new|uncertainty|unknown|transformation)\b/i
            };

            const confidence = context.personalPronoun ? 1.5 : 1.0;
            
            for (const [category, pattern] of Object.entries(emotionalSignals)) {
                if (pattern.test(message)) {
                    if ((context.intensity === 'high' && context.tone === 'negative') || confidence > 1.0) {
                        return category;
                    }
                }
            }

            return 'general';
        }

        let pdfLastSelectedIndices = new Set();
        
        function selectPDFContextualWisdom(wisdomOptions, context) {
            // Ensure variety - don't repeat recent selections
            let availableOptions = wisdomOptions.filter((_, index) => !pdfLastSelectedIndices.has(index));
            
            if (availableOptions.length === 0) {
                pdfLastSelectedIndices.clear();
                availableOptions = wisdomOptions;
            }

            // Select based on context
            let selectedWisdom;
            if (context.intensity === 'high' && availableOptions.length > 1) {
                selectedWisdom = availableOptions[0];
            } else if (context.personalPronoun && availableOptions.length > 1) {
                selectedWisdom = availableOptions[Math.floor(availableOptions.length / 2)];
            } else {
                const randomIndex = Math.floor(Math.random() * availableOptions.length);
                selectedWisdom = availableOptions[randomIndex];
            }

            // Track selection
            const originalIndex = wisdomOptions.indexOf(selectedWisdom);
            pdfLastSelectedIndices.add(originalIndex);
            
            // Keep only last 2 selections for PDF (smaller memory footprint)
            if (pdfLastSelectedIndices.size > 2) {
                const firstIndex = Array.from(pdfLastSelectedIndices)[0];
                pdfLastSelectedIndices.delete(firstIndex);
            }

            return selectedWisdom;
        }

        function subscribePDFWisdom() {
            const email = document.getElementById('pdfEmailInput').value.trim();
            
            if (!email || !email.includes('@')) {
                alert('Please enter a valid email address.');
                return;
            }

            const subject = encodeURIComponent('Inner Growth Letters - PDF Subscription');
            const body = encodeURIComponent(`Hello!

I found your Timeless Wisdom tool in your monthly PDF and would love to receive weekly wisdom from 3C Thread To Success.

Email: ${email}

Thank you!`);
            
            window.location.href = `mailto:3c.innertherapy@gmail.com?subject=${subject}&body=${body}`;
            
            document.getElementById('pdfEmailInput').value = '';
            alert('Thank you! Your email will open shortly.');
        }

        // Auto-expand functionality
        document.getElementById('pdfChallenge').addEventListener('focus', function() {
            this.style.height = '70px';
        });

        // PDF-specific detection
        if (window.location.protocol === 'file:' || navigator.pdfViewerEnabled) {
            console.log('PDF environment detected - optimizations applied');
        }
    </script>
</body>
